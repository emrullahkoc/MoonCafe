@model Contact

<div class="container-fluid bg-breadcrumb">
    <div class="container text-center" style="max-width: 900px;">
        <h1 class="text-white display-3 mb-4">
            Contact Us</h1>
    </div>
</div>

<div class="alert alert-success mt-3" id="success-message" style="display:none;">
    Your message has been sent successfully!
</div>

<div class="container-fluid contact bg-light">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-4">
                <div class="bg-white rounded p-4">
                    <div class="text-center mb-4">
                        <i class="fa fa-map-marker-alt fa-3x text-primary"></i>
                        <h4 class="text-primary"><Address></Address></h4>
                        <p class="mb-0">@ViewBag.Address</p>
                    </div>
                    <div class="text-center mb-4">
                        <i class="fa fa-phone-alt fa-3x text-primary mb-3"></i>
                        <h4 class="text-primary">Mobile</h4>
                        <p class="mb-0">@ViewBag.Telephone</p>
                    </div>

                    <div class="text-center">
                        <i class="fa fa-envelope-open fa-3x text-primary mb-3"></i>
                        <h4 class="text-primary">Email</h4>
                        <p class="mb-0">@ViewBag.Mail</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <h3 class="mb-2">Send us a message</h3>
                <p class="mb-4">Your return is valuable to us.</p>
                <form method="post" enctype="multipart/form-data">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control border-0" asp-for="ContactFullName" placeholder="Your Name">
                                <label for="name">Your Name</label>
                                <span class="text-danger" asp-validation-for="ContactFullName"></span>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control border-0" asp-for="ContactMail" placeholder="Your Email">
                                <label for="email">Your Email</label>
                                <span class="text-danger" asp-validation-for="ContactMail"></span>
                            </div>
                        </div>
                        <label for="subject">
                            Add Your Image
                        </label>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="file" class="form-control border-0" name="img" id="img" accept="image/*">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control border-0" placeholder="Leave a message here" asp-for="ContactMessage" style="height: 160px"></textarea>
                                <label for="message">Message</label>
                                <span class="text-danger" asp-validation-for="ContactMessage"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-12">
                <div class="rounded">
                    <iframe class="rounded w-100"
                            style="height: 450px;" src="@ViewBag.AboutMapLocation"
                            loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptSection {
    <script>
        $("form").submit(function (event) {
            event.preventDefault();
            $.ajax({
                url: $(this).attr("action"),
                type: $(this).attr("method"),
                data: new FormData(this),
                processData: false,
                contentType: false,
                success: function () {
                    $("#success-message").show();
                    setTimeout(function () {
                        window.location.href = "Index";
                    }, 3000);
                }
            });
        });
    </script>
}